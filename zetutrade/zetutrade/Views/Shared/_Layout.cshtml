                                <p>
                                    @localizer["social_medya_info"]
                                </p>
                                <ul class="ft-soc clearfix">

                                    <li><a href="" target="_blank"><i class="fa fa-twitter"></i></a></li>

                                    <li><a href="https://www.instagram.com/zetutrade/" target="_blank"><i class="fa fa-instagram"></i></a></li>
