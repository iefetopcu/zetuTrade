                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="quick-links">
                               
                                <ul>
                                    <li><a asp-action="Index" asp-controller="Home">@localizer["home_title"]</a></li>
                                    <li><a asp-action="Index" asp-controller="Urunler">@localizer["product_title"]</a></li>
                                    <li><a asp-action="Index" asp-controller="Hizmetler">@localizer["services_title"]</a></li>
                                    <li><a asp-action="Hakkimizda" asp-controller="Home">@localizer["about_title"]</a></li>
                                    <li><a asp-action="Index" asp-controller="Blog">@localizer["blog_title"]</a></li>
                                    <li><a asp-action="Iletisim" asp-controller="Home">@localizer["contact_title"]</a></li>

                                </ul>
                            </div>
                        </div>


                        <div class="col-md-3">
                            <div class="subscribe">
                                <div class="wid-title">@localizer["subscriber_title"]</div>
                                <p>
                                    @localizer["subscriber_description"]
                                </p>
                                <form method="post" asp-action="subscribe" asp-controller="Home">
                                    <div class="form-group">

                                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="@localizer["your_email_adress"]" name="subsEmail">
                                    </div>
                                    <button type="submit" class="btn btn-default">@localizer["subscribe"]</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer-text">
                <div class="container">
                    <p>Copyright 2021. Designed and Developed by <a href="https://www.artedijital.com/">Arte Dijital </a> </p>
                </div>
            </div>
