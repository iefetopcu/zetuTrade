        @if (ViewBag.Subscribe == "no")
        {
            <div class="container">
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">@localizer["unsuccess"]</h4><hr />
                    <p>@localizer["retry_mail_adress"]</p>

                </div>
            </div>

        }
        @if (ViewBag.Subscribe == "yes")
        {
            <div class="container">
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">@localizer["success_info"]</h4><hr />
                    <p>@localizer["mail_save_info"]</p>

                </div>
            </div>

        }
        @RenderBody()



