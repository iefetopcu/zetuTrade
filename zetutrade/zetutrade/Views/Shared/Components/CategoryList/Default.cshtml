@model IEnumerable<zetutrade_Model.Models.Category>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Kategori Listesi</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Kategori Adı</th>
                        <th scope="col">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var categorytext = item.CategoryTexts.FirstOrDefault();
                        <tr>
                            <td>@categorytext.categoryName</td>
                            <td>
                                <a asp-action="UpdateCategory" asp-controller="Admin" asp-route-id="@item.categoryID"><i class="fas fa-pen"></i></a>
                                <a asp-action="DeleteCategory" asp-controller="Admin" asp-route-id="@item.categoryID" onclick="return confirm('@categorytext.categoryName Kategorisini Silmek İstediğinize Emin Misiniz?')"><i class="fas fa-trash"></i></a> 
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
        </div>
    </div>
</div>