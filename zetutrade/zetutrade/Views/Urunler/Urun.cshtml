@model zetutrade_Model.Models.ProductText
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> localizer
@{
    ViewData["Title"] = @Model.productName;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var producturl = ViewBag.Photourl;
}

<div class="page-title">
    <div class="container">
        <div class="page-title-inner">

            <h3>@Model.productName</h3>
            <div class="breadcumb"> <a asp-action="Index" asp-controller="Urunler">@localizer["product_title"]</a><span> / </span><span>@Model.productName</span></div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
@*<img src="/@Url.Content(Model.productPhotoUrl)" alt="" class="img-responsive">*@
<div class="container">
    <div class="row" style="margin-top:20px;">
        <div class="col-lg-12">
            <div class="author-block">
                <div class="row">
                    <div class="col-md-3">

                        <img src="/@Url.Content(@producturl)" alt="@Model.productName" class="img-responsive">
                        <br />
                        <a href="@Url.Action("Siparis","Urunler", new { url = Model.url })" class="btn btn-blue" style="width:100%!important;">@localizer["get_an_offer"]</a>
                    </div>
                    <div class="col-md-9">
                        <div class="author-name">
                            <h3>
                                @Model.productName
                            </h3>


                            <div class="clearfix"></div>
                        </div>

                        <p>@Model.productDescription</p>
                        <ul class="ft-soc clearfix">
                            <li><a href="https://www.facebook.com/sharer/sharer.php?u=@ViewBag.Shareurl" target="_blank"><i class="fa fa-facebook-square"></i></a></li>
                            <li><a href="https://twitter.com/intent/tweet?url=@ViewBag.Shareurl" target="_blank"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="https://wa.me/?text= @Model.productName @ViewBag.Shareurl " target="_blank"><i class="fa fa-whatsapp"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
