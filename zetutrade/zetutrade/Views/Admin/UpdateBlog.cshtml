@model zetutrade_Model.Models.Blog
@{
    ViewData["Title"] = "UpdateBlog";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-12 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Zetu Trade</span>
        <h3 class="page-title">Ürün Güncelle</h3>
    </div>

</div>
@if (ViewBag.update == "no")
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Başarısız !</strong> Bu blog için bu dil eklenmemiş lütfen dili ekleyin ! <a asp-action="TextAddBlog" asp-route-id="@Model.blogID" style="color:white!important;">Dil Text Ekle</a>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="row">

</div>
@using (Html.BeginForm("UpdateBlog", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    var blogText = Model.BlogTexts.FirstOrDefault();
    <div class="main-content-container container-fluid px-12">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card card-small mb-9">
                    <div class="card-body">
                        @Html.TextBoxFor(m => m.blogID, new { @class = "invisible" })<br />

                        
                        <div class="row">
                            <div class="col-6">
                                <label>
                                    <i class="fa fa-camera-retro" aria-hidden="true"></i>
                                    Ürün Fotoğrafı
                                </label><br />
                                <img src="/@Url.Content(Model.blogPhoto)" style="width:50%!important;" />
                            </div>
                            <div class="col-6">                                                                                          
                                <label>
                                    <i class="fa fa-camera-retro" aria-hidden="true"></i>
                                    Fotoğrafı Güncelle
                                </label><br />
                                <input type="file" name="blogPhoto" />
                            </div>
                        </div>
                        <br /><br />
                        <button class="btn btn-sm btn-accent ml-auto">
                            <i class="material-icons">file_copy</i> Güncelle
                        </button>
                        <h5 class="text-center">Text Güncelle</h5>
                        <div class="row text-center">
                            <div class="col-lg-3">
                                <a asp-action="UpdateBlogTextTR" asp-route-id="@Model.blogID" class="btn btn-sm btn-warning ml-auto">
                                    <i class="material-icons">description</i> Türkçe
                                </a>
                            </div>
                            <div class="col-lg-3">
                                <a asp-action="UpdateBlogTextEN" asp-route-id="@Model.blogID" class="btn btn-sm btn-warning ml-auto">
                                    <i class="material-icons">description</i> İngilizce
                                </a>
                            </div>
                            <div class="col-lg-3">
                                <a asp-action="UpdateBlogTextESP" asp-route-id="@Model.blogID" class="btn btn-sm btn-warning ml-auto">
                                    <i class="material-icons">description</i> İspanyolca
                                </a>
                            </div>
                            <div class="col-lg-3">
                                <a asp-action="UpdateBlogTextARP" asp-route-id="@Model.blogID" class="btn btn-sm btn-warning ml-auto">
                                    <i class="material-icons">description</i> Arapça
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
