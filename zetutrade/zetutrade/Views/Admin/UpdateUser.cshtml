@model zetutrade_Model.Models.User
@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-12 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Zetu Trade</span>
        <h3 class="page-title">Ürün Güncelle</h3>
    </div>

</div>
@using (Html.BeginForm("UpdateUser", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="main-content-container container-fluid px-12">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card card-small mb-9">
                    <div class="card-body">
                        @Html.TextBoxFor(m => m.userID, new { @class = "invisible" })<br />
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <label> Kullanıcı Adı</label>
                        @Html.TextBoxFor(m => m.userName, new { @class = "form-control form-control-lg mb-3" })
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <label> Kullanıcı Soyadı</label>
                        @Html.TextBoxFor(m => m.userSurname, new { @class = "form-control form-control-lg mb-3" })
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                        <label> Email</label>
                        @Html.TextBoxFor(m => m.userEmail, new { @class = "form-control form-control-lg mb-3" })
                        <i class="fa fa-key" aria-hidden="true"></i>
                        <label> Şifre</label>
                        @Html.TextBoxFor(m => m.userPassword, new { @class = "form-control form-control-lg mb-3", @type = "password" })
                        <div class="row">
                            <div class="col-12">
                                <label>
                                    <i class="fa fa-cogs" aria-hidden="true"></i>
                                     Kullanıcı Rolü
                                </label><br />
                                @Html.DropDownListFor(m => m.userRoleID, (List<SelectListItem>)ViewBag.roles, new { @class = "ml-auto form-control" })

                            </div>
                        </div>

                        <br /><br />
                        <button class="btn btn-sm btn-accent ml-auto">
                            <i class="material-icons">file_copy</i> Güncelle
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>
}




