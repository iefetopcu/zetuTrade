@model zetutrade_Model.Models.Order
@{
    ViewData["Title"] = "ShowOrder";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-12 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Sipariş Kontrolü</span>       
    </div>
</div>
<hr />
<div class="row">
    <div class="col-lg-3">
        <h5>Ürün İsmi</h5>
        <h5>Ad Soyad</h5>
        <h5>E-Mail</h5>
        <h5>Sipariş Zamanı</h5>
        <h5>Sipariş Adresi</h5>
    </div>
    <div class="col-lg-9">
        <h5> : @ViewBag.productname</h5>
        <h5> : @Model.orderNameSurname</h5>
        <h5> : @Model.orderEmail</h5>
        <h5> : @Model.ordertime</h5>
        <h5> : @Model.orderAddress</h5>
    </div>
    <hr />
</div>
<hr />
<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-12 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Teklif Oluştur</span>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <form asp-controller="Admin" asp-action="NewOffer" method="post">
            <input type="number" name="orderID" value="@Model.orderID" class="invisible" required /><br />
            <div class="row">
                <div class="col-lg-3">
                    <h5>Ürün Adeti</h5><br />
                    <h5>Ürün Fiyatı $ </h5><br />
                    <h5>Nakliye Toplam Ücreti $ </h5><br />
                    <h5>İndirim (Varsa) % </h5><br />
                </div>
                <div class="col-lg-9">
                    <input type="number" name="orderNumber" value="@Model.orderNumber" class="form-control" required /><br />
                    <input type="number" name="productPrice" class="form-control" required /><br />
                    <input type="number" name="shippingPrice" class="form-control" required /><br />

                    <input type="number" name="discount" min="0" max="100" step="0.01" class="form-control" /><br />
                    <br />
                    <input type="submit" value="Teklif Oluştur" class="btn btn-primary" style="width:100%!important;" />
                </div>
            </div>
        </form>
    </div>
</div>