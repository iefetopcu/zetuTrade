@model IEnumerable<zetutrade_Model.Models.Offer>
@{
    ViewData["Title"] = "Offers";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="page-header row no-gutters py-4">
    <div class="col-12 col-sm-6 text-center text-sm-left mb-0">
        <span class="text-uppercase page-subtitle">Zetu Trade</span>
        <h3 class="page-title">Teklif Yönetimi</h3>
    </div>
    <div class="col-12 col-sm-6 text-center text-sm-left mb-0">

        <a href="" class="btn btn-primary" data-toggle="modal" data-target="#SearchProduct">Teklif Ara</a>
    </div>
</div>

<div class="row">
    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Ad Soyad</th>
                    
                    <th scope="col">Durum</th>

                    <th scope="col">İşlem</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var offer in Model)
                {
                    <tr>
                        <td>@offer.Order.orderNameSurname</td>
                        
                        <td>@offer.Status.statusName</td>
                        <td>
                            <a asp-action="ShowOffer" asp-route-id="@offer.offerID"><i class="fa fa-eye" aria-hidden="true"></i></a>
                            <a asp-action="DeleteOffer" asp-route-id="@offer.offerID" onclick="return confirm('Bu Teklifi Silmek İstediğinize Emin Misiniz?')"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>

                    </tr>
                }


            </tbody>
        </table>
    }
    else
    {
        <div class="col-lg-12">
            <h3 class="alert-danger text-center" style="padding:20px;">Herhangi bir teklif bulunmuyor !</h3>
        </div>

    }

</div>



