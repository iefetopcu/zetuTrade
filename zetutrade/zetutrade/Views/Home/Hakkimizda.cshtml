@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> localizer

@{
    ViewData["Title"] = localizer["about_title"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title">
    <div class="container">
        <div class="page-title-inner">
            <h3>@localizer["about_title"]</h3>
            <div class="breadcumb"> <a asp-action="Index" asp-controller="Home">@localizer["home_title"]</a><span> / </span><span>@localizer["about_title"]</span></div>
            <div class="clearfix"></div>
        </div>
        <div class="row" style="margin-top:30px; margin-bottom:30px; padding:20px;">
            <div class="col-lg-12">
                <p>@localizer["about_description"]</p>

            </div>
        </div>
        
    </div>
</div>

